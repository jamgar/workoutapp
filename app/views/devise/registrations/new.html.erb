<div class="row">
  <div class="col-md-9 col-md-offset-1">
    <h2 class="text-center">Sign up</h2>
    <%= devise_error_messages! %>  
  </div>
</div>
<div class="row">
  <div class="col-md-3 col-md-offset-4">

    <%= form_for(resource, as: resource_name, html: {class: "form-horizontal", role: "form"}, url: registration_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: "Enter Email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Enter Password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: "form-control" %>
        </div>
        
        <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>

    <% end %>  
  </div>
</div>
