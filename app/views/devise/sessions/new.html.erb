<div class="row">
  <div class="col-md-3 col-md-offset-4">
    <h2 class="text-center">Log in</h2>

    <%= form_for(resource, as: resource_name, html: {class: "form-horizontal", role: "form"}, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Enter Email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Enter Password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </label>
        </div><br/>
      <% end -%>

      <%= f.submit "Log in", class: "btn btn-primary btn-block" %>

    <% end %>
  </div>
</div>
